# ==========================================
# Agentrooms Production Environment Variables
# ==========================================
# Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to version control

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=agentrooms
POSTGRES_USER=agentrooms
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
DATABASE_URL=postgresql://agentrooms:CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION@postgres:5432/agentrooms?connection_limit=50&pool_timeout=10

# ==========================================
# Redis Configuration
# ==========================================
# Redis is accessed via Docker network, no host/port needed
# Redis persistence is configured in docker-compose.prod.yml

# ==========================================
# JWT Configuration
# ==========================================
# Generate a secure secret with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_MIN_64_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# GLM API Configuration
# ==========================================
# Get your API key from https://docs.z.ai/
GLM_API_KEY=your-production-glm-api-key-here
GLM_API_URL=https://api.z.ai/api/paas/v4

# ==========================================
# ARK Network Configuration
# ==========================================
# Change to mainnet URL for production deployment
ARK_TESTNET_URL=https://mainnet.ark.network
ARK_PRIVATE_KEY=your-production-private-key-here

# ==========================================
# Rust Service Configuration
# ==========================================
# Rust service is accessed via Docker network
RUST_SERVICE_URL=http://rust-services:8080

# ==========================================
# Frontend Configuration
# ==========================================
NEXT_PUBLIC_API_URL=https://api.agentrooms.com
NEXT_PUBLIC_WS_URL=wss://api.agentrooms.com
NEXT_PUBLIC_BLOCK_EXPLORER_URL=https://explorer.ark.network

# ==========================================
# WalletConnect Configuration
# ==========================================
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id-here

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins (no spaces)
CORS_ALLOWED_ORIGINS=https://agentrooms.com,https://www.agentrooms.com

# ==========================================
# Environment Configuration
# ==========================================
NODE_ENV=production
BACKEND_PORT=3000
FRONTEND_PORT=3002
RUST_LOG=info

# ==========================================
# Rate Limiting Configuration
# ==========================================
# Global rate limit: requests per minute per IP
GLOBAL_RATE_LIMIT=100
GLOBAL_RATE_WINDOW=60
# Agent spawn rate limit: agents per hour per user
AGENT_SPAWN_RATE_LIMIT=5
AGENT_SPAWN_RATE_WINDOW=3600
# Agent message rate limit: messages per minute per agent
AGENT_MESSAGE_RATE_LIMIT=10
AGENT_MESSAGE_RATE_WINDOW=60

# ==========================================
# Logging Configuration
# ==========================================
LOG_DIR=/app/logs
LOG_LEVEL=info
