# Database
DATABASE_URL="postgresql://agentrooms:dev_password_123@localhost:5432/agentrooms?connection_limit=50&pool_timeout=10"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# GLM API
# Get your API key from https://docs.z.ai/
GLM_API_KEY=your-glm-api-key-here
GLM_API_URL=https://api.z.ai/api/paas/v4

# ARK Network
ARK_TESTNET_URL=https://testnet.ark.network
ARK_PRIVATE_KEY=your-testnet-private-key

# Rust Service
RUST_SERVICE_URL=http://localhost:8080

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
# Block Explorer URL for transaction links
NEXT_PUBLIC_BLOCK_EXPLORER_URL=https://testnet.ark.network

# WalletConnect
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id-here

# Security
# Comma-separated list of allowed CORS origins (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000
# Environment: development, production, test
NODE_ENV=development
# Backend port
PORT=3000

# Rate Limiting
# Global rate limit: requests per minute per IP/user
GLOBAL_RATE_LIMIT=100
GLOBAL_RATE_WINDOW=60
# Agent spawn rate limit: agents per hour per user
AGENT_SPAWN_RATE_LIMIT=5
AGENT_SPAWN_RATE_WINDOW=3600
# Agent message rate limit: messages per minute per agent
AGENT_MESSAGE_RATE_LIMIT=10
AGENT_MESSAGE_RATE_WINDOW=60

# Logging
# Log directory (relative to backend folder)
LOG_DIR=logs
# Log level: error, warn, info, debug, verbose
LOG_LEVEL=debug
# In production, logs are written to files only (no console output)
# In development, logs are written to both console and files
